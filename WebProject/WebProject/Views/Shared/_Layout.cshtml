<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebProject</title>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2018.3.911/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2018.3.911/js/kendo.timezones.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2018.3.911/js/kendo.aspnetmvc.min.js"></script>

    <script src="~/jsZip/jszip.js"></script>
    <script src="~/jsZip/jszip.min.js"></script>
    <script src="~/js/theme-chooser.js"></script>
    <script src="~/js/jquery.unobtrusive-ajax.js"></script>

    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.3.911/styles/kendo.common-bootstrap.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.3.911/styles/kendo.bootstrap.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.3.911/styles/kendo.dataviz.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.3.911/styles/kendo.dataviz.bootstrap.min.css" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/LoginOut.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />




</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar navbar-inverse navbar-fixed-top" style="height: 10px">
            <div class="container text-center">

                <div class="navbar-collapse collapse ">
                    <ul class="nav navbar-nav d-inline-block text-center ">
                        <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="About">Home</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Index">Table</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Users" asp-action="Logout">Logout</a></li>
                    </ul>
                    <ul class="nav navbar-nav d-inline-block text-center navbar-right ">
                        <li style="color:white; padding-top: 16px; padding-right: 10px;">Welcome @User.Identity.Name</li>
                        <li class="navbar-header "><a asp-area="" asp-controller="Home" asp-action="About" class="navbar-brand">WebProject</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    }

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @if (User.Identity.IsAuthenticated)
            {
                <nav class="navbar navbar-inverse navbar-fixed-bottom text-center" style="height: 10px; width: auto; padding-top: 15px;">
                    <p class="nav-item"><a style="color: white">&copy; 2018 - WebProject</a></p>
                </nav>
            }
        </footer>
    </div>

   


    <script>
        $(document).ready(function () {
            changeFontSize();

            $("#theme-list, #dimensions-list, #font-size-list").addClass("ra-list");

            $("#configure").on("click", function (e) {
                $("#configurator-wrap").toggleClass("hidden-xs");
                e.preventDefault();
            });
        })
        function onDimensionChange() {
            window.kendoThemeChooser.changeCommon(this.value(), true);
        }

        function onThemeChange() {
            theme = this.value();
            window.kendoThemeChooser.changeTheme(theme, true);
        }

        function changeFontSize() {
            var value = $("#font-size").kendoDropDownList("value");
            $("body").css("font-size", value + "px");
        }

        function resizeTabStripContent() {
            kendo.resize("#tabstrip");
        }

        $(window).resize(resizeTabStripContent);
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
